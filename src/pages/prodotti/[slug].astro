---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import ContactSection from '../../components/ContactSection.astro';

// 1. Genera i percorsi per tutti i prodotti
export async function getStaticPaths() {
  const prodotti = await getCollection('prodotti');
  return prodotti.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

// Messaggio precompilato per WhatsApp
const whatsappMessage = `Buongiorno, sono interessato al prodotto: ${entry.data.title}`;
// NUMERO VERIFICATO: 3343680678 (prefisso 39)
const whatsappLink = `https://wa.me/393343680678?text=${encodeURIComponent(whatsappMessage)}`;
---

<Layout title={`${entry.data.title} | ProGreen Solution`}>
  <Navbar />

  <main class="pt-32 pb-12 bg-stone-50 min-h-screen">
    <div class="max-w-7xl mx-auto px-6">
      
      <nav class="flex text-sm text-stone-500 mb-8 border-b border-stone-200 pb-4">
        <a href="/" class="hover:text-emerald-600 transition-colors">Home</a>
        <span class="mx-2">/</span>
        <a href="/catalogo" class="hover:text-emerald-600 transition-colors">Catalogo</a>
        <span class="mx-2">/</span>
        <span class="text-stone-900 font-semibold">{entry.data.title}</span>
      </nav>

      <div class="bg-white rounded-3xl shadow-sm border border-stone-100 overflow-hidden">
        <div class="grid grid-cols-1 lg:grid-cols-2">
          
          <div class="h-[400px] lg:h-auto bg-stone-100 relative group min-h-[500px]">
             {entry.data.image ? (
                <img 
                src={entry.data.image} 
                alt={entry.data.title} 
                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                />
             ) : (
                <div class="flex items-center justify-center h-full text-stone-300">Nessuna immagine</div>
             )}
             <span class="absolute top-6 left-6 bg-white/90 backdrop-blur px-4 py-2 text-xs font-bold uppercase tracking-widest text-emerald-800 rounded-lg shadow-sm border border-stone-100">
                {entry.data.category}
             </span>
          </div>

          <div class="p-8 lg:p-12 flex flex-col justify-center">
            
            <h1 class="text-4xl lg:text-5xl font-bold text-stone-900 mb-6 leading-tight">
              {entry.data.title}
            </h1>
            
            <div class="prose prose-stone prose-lg text-stone-500 mb-8 leading-relaxed">
              <Content />
            </div>

            <div class="bg-stone-50 rounded-xl p-6 border border-stone-100 mb-8">
                <h3 class="text-xs font-bold text-stone-900 uppercase tracking-widest mb-4 flex items-center gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-emerald-600" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                  Info Fornitura
                </h3>
                <ul class="space-y-3 text-sm">
                  <li class="flex justify-between border-b border-stone-200 pb-2">
                    <span class="text-stone-500">Disponibilit√†:</span>
                    <span class="font-semibold text-emerald-700">Verifica in negozio</span>
                  </li>
                  <li class="flex justify-between border-b border-stone-200 pb-2">
                    <span class="text-stone-500">Consulenza:</span>
                    <span class="font-semibold text-stone-800">Inclusa</span>
                  </li>
                </ul>
            </div>

            <div class="mt-auto pt-6 border-t border-stone-100 space-y-4">
              <p class="text-sm text-stone-400">Ordina o richiedi informazioni direttamente su WhatsApp:</p>
              
              <a href={whatsappLink} target="_blank" class="flex items-center justify-center gap-3 w-full bg-[#25D366] hover:bg-[#128C7E] text-white font-bold py-4 rounded-xl transition-all shadow-lg hover:shadow-emerald-900/20 transform hover:-translate-y-1">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 16 16"><path d="M13.601 2.326A7.854 7.854 0 0 0 7.994 0C3.627 0 .068 3.558.064 7.926c0 1.399.366 2.76 1.057 3.965L0 16l4.204-1.102a7.933 7.933 0 0 0 3.79.965h.004c4.368 0 7.926-3.558 7.93-7.93A7.898 7.898 0 0 0 13.6 2.326zM7.994 14.521a6.573 6.573 0 0 1-3.356-.92l-.24-.144-2.494.654.666-2.433-.156-.251a6.56 6.56 0 0 1-1.007-3.505c0-3.626 2.957-6.584 6.591-6.584a6.56 6.56 0 0 1 4.66 1.931 6.557 6.557 0 0 1 1.928 4.66c-.004 3.639-2.961 6.592-6.592 6.592z"/></svg>
                Chiedi info su WhatsApp
              </a>

              <a href="/#contatti" class="block w-full text-center text-sm font-semibold text-stone-500 hover:text-stone-900 transition-colors">
                Oppure invia una mail dal modulo contatti
              </a>
            </div>
          </div>

        </div>
      </div>
    </div>
  </main>
  
  <ContactSection />
</Layout>