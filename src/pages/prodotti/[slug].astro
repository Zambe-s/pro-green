---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import ContactSection from '../../components/ContactSection.astro';
import ProductCard from '../../components/ProductCard.astro';

// 1. Genera i percorsi per tutti i prodotti
export async function getStaticPaths() {
  const prodotti = await getCollection('prodotti');
  return prodotti.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

// --- LOGICA WHATSAPP DINAMICA ---
const phoneNumber = "393343680678"; 
const whatsappMessage = `Buongiorno, sono interessato al prodotto: ${entry.data.title}. Ãˆ disponibile?`;
const whatsappLink = `https://wa.me/${phoneNumber}?text=${encodeURIComponent(whatsappMessage)}`;

// --- LOGICA PRODOTTI CORRELATI ---
// Recuperiamo tutti i prodotti per trovare quelli simili
const tuttiProdotti = await getCollection('prodotti');
// Filtriamo: stessa categoria, ma escludiamo il prodotto che stiamo giÃ  guardando
const correlati = tuttiProdotti
  .filter(p => p.data.category === entry.data.category && p.slug !== entry.slug)
  .slice(0, 3); // Ne prendiamo massimo 3
---

<Layout 
  title={`${entry.data.title} | Shop ProGreen`}
  description={entry.data.description}
>
  <Navbar />
  
  <main class="pt-32 pb-20 bg-white min-h-screen">
    <div class="max-w-7xl mx-auto px-6">
      
      <nav class="flex items-center text-sm text-stone-500 mb-8 overflow-x-auto whitespace-nowrap">
        <a href="/" class="hover:text-emerald-600 transition-colors">Home</a>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mx-2" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
        <a href="/catalogo" class="hover:text-emerald-600 transition-colors">Negozio</a>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mx-2" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
        <span class="text-stone-900 font-semibold">{entry.data.title}</span>
      </nav>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-20 mb-20">
        
        <div class="space-y-6">
          <div class="aspect-square bg-stone-50 rounded-3xl overflow-hidden border border-stone-100 shadow-lg relative group">
            {entry.data.image ? (
                <img 
                src={entry.data.image} 
                alt={entry.data.title} 
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
                />
            ) : (
                <div class="flex items-center justify-center h-full text-stone-300 bg-stone-100">Immagine non disponibile</div>
            )}
            
            <div class="absolute top-4 left-4">
                 <span class="bg-white/90 backdrop-blur-md text-stone-800 text-xs font-bold uppercase tracking-wider px-4 py-2 rounded-full shadow-sm">
                    {entry.data.category}
                 </span>
            </div>
          </div>
        </div>

        <div class="flex flex-col justify-center">
          
          <h1 class="text-3xl md:text-5xl font-bold text-stone-900 mb-4 leading-tight">
            {entry.data.title}
          </h1>

          <div class="flex items-center gap-4 mb-8">
            {entry.data.price ? (
                <span class="text-4xl font-bold text-emerald-600">{entry.data.price}</span>
            ) : (
                <span class="text-2xl font-bold text-emerald-600">Su richiesta</span>
            )}
            <span class="px-3 py-1 bg-emerald-50 text-emerald-700 text-xs font-bold rounded-lg uppercase flex items-center gap-1">
                <span class="w-2 h-2 bg-emerald-500 rounded-full animate-pulse"></span>
                Disponibile
            </span>
          </div>

          <div class="prose prose-stone prose-lg mb-10 text-stone-600 leading-relaxed">
            <Content />
          </div>

          <div class="hidden lg:flex flex-col sm:flex-row gap-4 border-t border-stone-100 pt-8">
            <a href={whatsappLink} target="_blank" class="flex-1 bg-[#25D366] text-white font-bold py-4 px-8 rounded-xl hover:bg-[#128C7E] transition-all shadow-xl shadow-emerald-200 flex items-center justify-center gap-3 transform active:scale-95">
               <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 16 16"><path d="M13.601 2.326A7.854 7.854 0 0 0 7.994 0C3.627 0 .068 3.558.064 7.926c0 1.399.366 2.76 1.057 3.965L0 16l4.204-1.102a7.933 7.933 0 0 0 3.79.965h.004c4.368 0 7.926-3.558 7.93-7.93A7.898 7.898 0 0 0 13.6 2.326zM7.994 14.521a6.573 6.573 0 0 1-3.356-.92l-.24-.144-2.494.654.666-2.433-.156-.251a6.56 6.56 0 0 1-1.007-3.505c0-3.626 2.957-6.584 6.591-6.584a6.56 6.56 0 0 1 4.66 1.931 6.557 6.557 0 0 1 1.928 4.66c-.004 3.639-2.961 6.592-6.592 6.592z"/></svg>
               Ordina su WhatsApp
            </a>
            <a href={`tel:+${phoneNumber}`} class="px-8 py-4 border-2 border-stone-200 text-stone-600 font-bold rounded-xl hover:border-stone-900 hover:text-stone-900 transition-all text-center flex items-center justify-center gap-2">
                Chiama
            </a>
          </div>
          
          <div class="mt-6 flex items-center gap-4 text-xs text-stone-400 justify-center sm:justify-start">
             <span class="flex items-center gap-1">ðŸšš Spedizione 24/48h</span>
             <span class="flex items-center gap-1">ðŸ”’ Pagamenti Sicuri</span>
          </div>

        </div>
      </div>

      {correlati.length > 0 && (
        <div class="border-t border-stone-100 pt-16">
            <h2 class="text-2xl font-bold text-stone-900 mb-8">Potrebbero interessarti anche</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                {correlati.map(prodotto => (
                <div class="h-full">
                    <ProductCard 
                        title={prodotto.data.title} 
                        category={prodotto.data.category} 
                        image={prodotto.data.image} 
                        price={prodotto.data.price}
                        slug={prodotto.slug} 
                    />
                </div>
                ))}
            </div>
        </div>
      )}

    </div>
  </main>

  <div class="fixed bottom-0 left-0 right-0 bg-white border-t border-stone-200 p-4 lg:hidden z-50 shadow-[0_-5px_20px_rgba(0,0,0,0.1)] flex items-center justify-between gap-4 safe-area-bottom">
    <div class="flex flex-col">
       <span class="text-[10px] text-stone-500 uppercase font-bold tracking-wider">Prezzo</span>
       {entry.data.price ? (
          <span class="text-xl font-bold text-emerald-600 leading-none">{entry.data.price}</span>
       ) : (
          <span class="text-sm font-bold text-stone-800 leading-none">Su richiesta</span>
       )}
    </div>
    <a href={whatsappLink} target="_blank" class="flex-1 bg-emerald-600 text-white font-bold py-3 px-4 rounded-xl hover:bg-emerald-500 text-center shadow-lg flex items-center justify-center gap-2 active:scale-95 transition-transform">
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" viewBox="0 0 16 16"><path d="M13.601 2.326A7.854 7.854 0 0 0 7.994 0C3.627 0 .068 3.558.064 7.926c0 1.399.366 2.76 1.057 3.965L0 16l4.204-1.102a7.933 7.933 0 0 0 3.79.965h.004c4.368 0 7.926-3.558 7.93-7.93A7.898 7.898 0 0 0 13.6 2.326zM7.994 14.521a6.573 6.573 0 0 1-3.356-.92l-.24-.144-2.494.654.666-2.433-.156-.251a6.56 6.56 0 0 1-1.007-3.505c0-3.626 2.957-6.584 6.591-6.584a6.56 6.56 0 0 1 4.66 1.931 6.557 6.557 0 0 1 1.928 4.66c-.004 3.639-2.961 6.592-6.592 6.592z"/></svg>
      Ordina Ora
    </a>
  </div>

  <ContactSection />
</Layout>

<style>
  /* Per i telefoni moderni con la barra in basso */
  .safe-area-bottom {
    padding-bottom: env(safe-area-inset-bottom, 20px);
  }
</style>