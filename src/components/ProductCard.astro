---
const { title, category, image } = Astro.props;
---

<div class="group relative bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-xl transition-all duration-500 cursor-pointer">
  <div class="aspect-[4/5] overflow-hidden bg-stone-100">
    {image && (
      <img 
        src={image} 
        alt={title} 
        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
      />
    )}
  </div>
  
  <div class="p-6">
    <p class="text-emerald-600 text-xs font-bold tracking-widest uppercase mb-2">{category}</p>
    <h3 class="text-xl font-semibold text-stone-900 mb-4 group-hover:text-emerald-800 transition-colors">{title}</h3>
    <span class="inline-block text-xs font-medium text-stone-400 border-b border-stone-200 pb-0.5 group-hover:border-emerald-600 group-hover:text-emerald-600 transition-all">
      SCOPRI DI PIÃ™
    </span>
  </div>
</div>