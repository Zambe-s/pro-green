<div id="cookie-banner" class="fixed bottom-4 left-4 md:bottom-6 md:left-6 max-w-[calc(100%-2rem)] md:max-w-md bg-stone-900/95 backdrop-blur-md text-white p-6 rounded-2xl z-[60] transform translate-y-[150%] transition-transform duration-500 shadow-2xl border border-stone-700 flex flex-col gap-4">
    
    <div class="flex items-start gap-3">
        <span class="text-2xl">üç™</span>
        <div class="text-sm text-stone-300 leading-relaxed">
            <p class="font-bold text-white mb-1">Informativa Privacy</p>
            <p>
                Utilizziamo cookie tecnici per migliorare la tua esperienza. Continuando a navigare accetti il loro utilizzo.
            </p>
        </div>
    </div>

    <div class="flex justify-end gap-3 pt-2">
        <button id="accept-cookies" class="px-6 py-2.5 bg-emerald-600 text-white font-bold rounded-xl hover:bg-emerald-500 transition-colors text-sm shadow-lg shadow-emerald-900/20 w-full md:w-auto">
            Accetto
        </button>
    </div>
</div>

<script>
    const banner = document.getElementById('cookie-banner');
    const acceptBtn = document.getElementById('accept-cookies');
    const storageKey = 'progreen-cookies-accepted';

    if (banner && acceptBtn) {
        // Controlla se l'utente ha gi√† accettato
        if (!localStorage.getItem(storageKey)) {
            // Aspetta 1 secondo e poi fai salire il banner
            setTimeout(() => {
                banner.classList.remove('translate-y-[150%]');
            }, 1000);
        }

        // Al click: salva la scelta e nascondi il banner
        acceptBtn.addEventListener('click', () => {
            localStorage.setItem(storageKey, 'true');
            banner.classList.add('translate-y-[150%]');
        });
    }
</script>