---
const pathname = Astro.url.pathname;

const isActive = (path: string) => {
  if (path === '/') return pathname === '/';
  return pathname.startsWith(path);
};

const linkClass = "nav-link text-stone-600 hover:text-emerald-600 transition-colors font-medium text-sm tracking-wide";
const activeClass = "nav-link text-emerald-700 font-bold border-b-2 border-emerald-500 pb-1";
---

<div class="bg-emerald-900 text-white text-[10px] md:text-xs font-bold py-2 text-center tracking-widest uppercase relative z-50">
    üìç Malnate (VA) ‚Ä¢ üöö Spedizioni Rapide ‚Ä¢ üìû Assistenza WhatsApp
</div>

<nav class="bg-white shadow-sm border-b border-stone-100 sticky top-0 z-40 w-full transition-all duration-300" id="navbar">
  <div class="max-w-7xl mx-auto px-6 h-20 flex justify-between items-center">
    
    <a href="/" class="flex items-center gap-2 group">
      <img src="/logo.jpg" alt="ProGreen Logo" class="h-12 w-auto object-contain group-hover:opacity-90 transition-opacity" />
    </a>

    <ul class="hidden md:flex items-center gap-8">
      <li>
        <a href="/" id="nav-home" class={isActive('/') ? activeClass : linkClass}>Home</a>
      </li>
      <li>
        <a href="/catalogo" class={isActive('/catalogo') ? activeClass : linkClass}>Shop</a>
      </li>
      <li>
        <a href="/#contatti" id="nav-contatti" class={linkClass}>Contatti</a>
      </li>
    </ul>

    <div class="hidden md:flex items-center gap-4">
        <a href="tel:3343680678" class="flex items-center gap-2 text-stone-500 hover:text-emerald-600 font-bold text-sm transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" /></svg>
            334 368 0678
        </a>
    </div>

    <button id="menu-btn" class="md:hidden text-stone-800 p-2 focus:outline-none" aria-label="Menu">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
      </svg>
    </button>
  </div>

  <div id="mobile-menu" class="fixed inset-0 bg-white z-50 transform translate-x-full transition-transform duration-300 md:hidden flex flex-col">
      <div class="p-6 flex justify-between items-center border-b border-stone-100">
          <span class="font-bold text-xl text-stone-900">Menu</span>
          <button id="close-menu" class="text-stone-500 hover:text-stone-900">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
      </div>
      
      <div class="flex flex-col p-8 gap-6 text-center text-xl">
          <a href="/" class={isActive('/') ? "text-emerald-600 font-bold" : "text-stone-800"}>Home</a>
          <a href="/catalogo" class={isActive('/catalogo') ? "text-emerald-600 font-bold" : "text-stone-800"}>Shop</a>
          <a href="/#contatti" class="text-stone-800">Contatti</a>
          
          <div class="mt-8 border-t border-stone-100 pt-8 flex flex-col gap-4">
             <a href="/catalogo" class="bg-emerald-600 text-white py-4 rounded-xl font-bold shadow-lg">Vai allo Shop</a>
             <a href="https://wa.me/393343680678" class="text-emerald-700 font-bold flex items-center justify-center gap-2">Chatta con noi</a>
          </div>
      </div>
  </div>
</nav>

<script>
  const menuBtn = document.getElementById('menu-btn');
  const closeBtn = document.getElementById('close-menu');
  const mobileMenu = document.getElementById('mobile-menu');

  if (menuBtn && closeBtn && mobileMenu) {
      menuBtn.addEventListener('click', () => mobileMenu.classList.remove('translate-x-full'));
      closeBtn.addEventListener('click', () => mobileMenu.classList.add('translate-x-full'));
      mobileMenu.querySelectorAll('a').forEach(link => {
          link.addEventListener('click', () => mobileMenu.classList.add('translate-x-full'));
      });
  }

  if (window.location.pathname === '/') {
    const sectionContatti = document.getElementById('contatti');
    const navContatti = document.getElementById('nav-contatti');
    const navHome = document.getElementById('nav-home');

    const activeClasses = ['text-emerald-700', 'font-bold', 'border-b-2', 'border-emerald-500', 'pb-1'];
    const inactiveClasses = ['text-stone-600', 'font-medium'];

    if (sectionContatti && navContatti && navHome) {
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    navContatti.classList.add(...activeClasses);
                    navContatti.classList.remove(...inactiveClasses);
                    navHome.classList.remove(...activeClasses);
                    navHome.classList.add(...inactiveClasses);
                } else {
                    navContatti.classList.remove(...activeClasses);
                    navContatti.classList.add(...inactiveClasses);
                    navHome.classList.add(...activeClasses);
                    navHome.classList.remove(...inactiveClasses);
                }
            });
        }, { threshold: 0.3 });
        observer.observe(sectionContatti);
    }
  }
</script>